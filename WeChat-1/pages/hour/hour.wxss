.nav{
  width:100%;
  height:100rpx;
  display:flex;
  background: #eee;
  flex-direction:row;
}
.default{
  line-height:100rpx;
  text-align:center;
  flex:1;
  border-right:1px solid gainsboro;
  color:#000;
  font-weight:bold;
  font-size:32rpx;
  }
.red{
  line-height:100rpx;
  text-align:center;
  color:#1296db;
  font-size:32rpx;
  flex:1;
  border-right:1px solid gainsboro;
  font-weight:bold;
}
.show{
  display:block;
  text-align:center;
  }
.hidden{
  display:none;
  text-align:center;
}
.title{
  font-size:40rpx;
  font-weight:blod;
}
.section{
  padding: 14px 8px;
  text-align: left;
  box-shadow: 0 2px 2px 1px #ccc;
}
.time{
  font-size:36rpx;
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
}
.time image{
  width: 70rpx;
  height: 60rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 400rpx;
  
}
.img{
  width: 100%;
  height: 220px;
}
.content{
  text-align: justify;
  font-size: 36rpx;
  color: #555;
  
  padding-bottom: 4px;
  border-bottom: 1px solid #ccc;
}